# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# zkp2p API Key (for deposit creation)
NEXT_PUBLIC_ZKP2P_API_KEY=your_api_key_here

# Aztec RPC URL (devnet: https://next.devnet.aztec-labs.com)
NEXT_PUBLIC_AZTEC_RPC_URL=https://next.devnet.aztec-labs.com

# Base RPC URL (sepolia: https://sepolia.base.org)
NEXT_PUBLIC_BASE_RPC_URL=https://sepolia.base.org

# =============================================================================
# Substance Bridge Token Addresses
# Gateway addresses come from SDK constants - only tokens need to be configured
# =============================================================================

# Aztec USDC Token Address (deployed on Aztec devnet)
NEXT_PUBLIC_AZTEC_TOKEN_ADDRESS=

# Base USDC Token Address (deployed on Base Sepolia)
NEXT_PUBLIC_BASE_TOKEN_ADDRESS=

# =============================================================================
# Coinbase Paymaster (for gasless burner transactions)
# =============================================================================

# Get your API key from https://portal.cdp.coinbase.com/
# Navigate to: Paymaster -> Copy endpoint URL
# Format: https://api.developer.coinbase.com/rpc/v1/base-sepolia/<API_KEY>
NEXT_PUBLIC_COINBASE_PAYMASTER_RPC_URL=
